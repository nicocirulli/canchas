// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

/// Modelo de ejemplo (podés agregar más después)
model Turno {
  id        Int      @id @default(autoincrement())
  nombre    String
  fecha     DateTime
  creadoEn  DateTime @default(now())
}
