generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Cancha {
  id     Int    @id @default(autoincrement())
  nombre String @map("name")
  tipo   Int    @map("sport_id") 

  turnos Turno[]

  @@map("Court")
}

model Turno {
  id              Int      @id @default(autoincrement())
  nombreCliente   String   
  
  // CAMPOS NUEVOS
  email           String   
  telefono        String   
  
  canchaId        Int
  cancha          Cancha   @relation(fields: [canchaId], references: [id])
  
  horaInicio      DateTime 
  horaFin         DateTime 
  
  duracionMinutos Int 

  creadoEn        DateTime @default(now())

  @@map("Booking") 
}